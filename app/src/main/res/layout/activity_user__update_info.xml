<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context="com.example.abdulahad.railwaysystem.User_UpdateInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="25dp"
            android:gravity="center"
            android:background="@drawable/border"
            android:textColor="@color/black"
            android:text="Change Password"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Current Password"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/current_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Enter current password"
                android:gravity="center"
                android:background="@drawable/headings_border" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="New Password"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/new_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Enter new password"
                android:gravity="center"
                android:background="@drawable/headings_border" />

        </LinearLayout>

        <Button
            android:id="@+id/changepass_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:background="@drawable/roundedbutton"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="25dp"
            android:gravity="center"
            android:background="@drawable/border"
            android:textColor="@color/black"
            android:text="Change Mobile No"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="New Mobile No"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/new_mob_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Enter new Mobile No"
                android:gravity="center"
                android:background="@drawable/headings_border" />

        </LinearLayout>

        <Button
            android:id="@+id/changemobno_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Mobile No"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:background="@drawable/roundedbutton"
            android:textStyle="bold"/>



    </LinearLayout>


</ScrollView>
