<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray"
    tools:context="com.example.abdulahad.railwaysystem.AdminAfterLogin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Logged In As : "
            android:id="@+id/logger_adminname"
            android:layout_margin="10dp"
            android:background="@drawable/border"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"/>


        <ViewFlipper
            android:id="@+id/flipper"
            android:layout_width="fill_parent"
            android:background="@drawable/border"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_margin="15dp"
            android:layout_height="230sp">
        </ViewFlipper>





        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/mywidget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:layout_marginLeft="150dp"
                android:background="@color/colorPrimaryDark"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:textColor="@color/white"
                android:padding="5dp"
                android:text="Hello Sir ! Now you can access and manage all your passenger details in single Android App" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
           >

            <Button
                android:layout_width="159dp"
                android:layout_height="130dp"
                android:text="Schedule Train "
                android:layout_margin="10dp"
                android:drawableTop="@drawable/add_train"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@drawable/roundedbutton"
                android:id="@+id/id_Schedule_train"

                />

            <Button
                android:id="@+id/id_manageTrain"
                android:layout_width="159dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/roundedbutton"
                android:drawableTop="@drawable/cancel_train"
                android:text=" Cancel   Train"
                android:textStyle="bold" />

            <Button
                android:layout_width="159dp"
                android:layout_height="130dp"
                android:text="view     Tickets"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:background="@drawable/roundedbutton"
                android:drawableTop="@drawable/viewticket"
                android:layout_weight="1"
                android:id="@+id/id_viewTickets"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:layout_width="129dp"
                android:layout_height="130dp"
                android:text="View          Trains"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:drawableTop="@drawable/view_train"
                android:background="@drawable/roundedbutton"
                android:layout_weight="1"
                android:id="@+id/id_viewpassengersbtn"
                />

            <Button
                android:layout_width="129dp"
                android:layout_height="130dp"
                android:text="View         users"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:drawableTop="@drawable/view_user"
                android:layout_weight="1"
                android:background="@drawable/roundedbutton"
                android:id="@+id/id_manageusersbtn"
                />

            <Button
                android:layout_width="129dp"
                android:layout_height="130dp"
                android:text="View Feedbacks"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:drawableTop="@drawable/feedbacksmall"
                android:layout_weight="1"
                android:background="@drawable/roundedbutton"
                android:id="@+id/id_viewfeedbacks"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="Log Out"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:drawableTop="@drawable/sign_out"
                android:layout_weight="1"
                android:background="@drawable/roundedbutton"
                android:id="@+id/id_signoutbtn"
                />

        </LinearLayout>


    </LinearLayout>

</ScrollView>
